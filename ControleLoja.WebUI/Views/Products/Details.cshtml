@model ControleLoja.Application.DTOs.ProductDTO

<h3>Editar Produto</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descrição)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descrição)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Imagem)</dt>
        <dd class="col-sm-10">
            @if (!ViewBag.ImagemExist)
            {
                <img src="~/Imagems/noImagem.png" class="rounded-circle" 
                     height="300" width="300" asp-append-version="true" />
            }
            else
            {
                <img src="~/Imagems/@Model.Imagem" class="rounded-circle" 
                     height="300" width="300" asp-append-version="true" />
            }
        </dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Preço)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Preço)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estoque)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Estoque)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Category)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.Nome)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index">Voltar para Lista</a>
</div>
